<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/title_bar"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/carlistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <Button
            android:id="@+id/addmenu_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/addmenu_button_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/login_bg"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:height="37dp"
                android:text="@string/title_str6"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/window_bg"
                android:textSize="17sp" >
            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:height="37dp"
                android:text="@string/title_str7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/window_bg"
                android:textSize="17sp" >
            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:height="37dp"
                android:text="@string/title_str8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/window_bg"
                android:textSize="17sp" >
            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:height="37dp"
                android:text="@string/title_str9"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/window_bg"
                android:textSize="17sp" >
            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:height="37dp"
                android:text="@string/title_str5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/window_bg"
                android:textSize="17sp" >
            </TextView>
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="@color/black" />

        <ListView
            android:id="@+id/carlistview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

</LinearLayout>